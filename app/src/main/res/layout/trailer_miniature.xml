<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_trailer_miniature_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/dummy_trailer_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintBottom_toTopOf="@+id/img_trailer_icon"
        app:layout_constraintStart_toEndOf="@+id/img_trailer_icon"
        app:layout_constraintTop_toBottomOf="@+id/img_trailer_icon" />

    <ImageView
        android:id="@+id/img_trailer_icon"
        android:layout_width="@dimen/trailer_miniature_width"
        android:layout_height="@dimen/trailer_miniature_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_ondemand_video_black_24dp" />
</android.support.constraint.ConstraintLayout>